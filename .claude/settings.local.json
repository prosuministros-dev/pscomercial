{
  "permissions": {
    "allow": [
      "Bash(git *)",
      "Bash(pnpm *)",
      "Bash(npm *)",
      "Bash(npx *)",
      "Bash(node *)",
      "Bash(pip *)",
      "Read",
      "Write",
      "Edit",
      "Glob",
      "Grep",
      "mcp__supabase__*",
      "mcp__playwright__*",
      "Bash(pnpm typecheck:*)",
      "Bash(pnpm lint:*)",
      "Bash(cat:*)",
      "Bash(pnpm add:*)",
      "Bash(cd:*)",
      "Bash(timeout 30 pnpm dev:*)",
      "Bash(git pull:*)",
      "Bash(git reset:*)"
    ]
  },
  "mcpServers": {
    "supabase": {
      "command": "npx",
      "args": [
        "-y",
        "@anthropic-ai/mcp-supabase"
      ],
      "env": {
        "SUPABASE_ACCESS_TOKEN": "PENDIENTE_OBTENER_DE_SUPABASE_DASHBOARD"
      }
    },
    "playwright": {
      "command": "npx",
      "args": [
        "-y",
        "@anthropic-ai/mcp-playwright"
      ]
    }
  }
}
