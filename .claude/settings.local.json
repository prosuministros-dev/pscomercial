{
  "permissions": {
    "allow": [
      "Bash(git *)",
      "Bash(pnpm *)",
      "Bash(npm *)",
      "Bash(npx *)",
      "Bash(node *)",
      "Bash(pip *)",
      "Read",
      "Write",
      "Edit",
      "Glob",
      "Grep",
      "mcp__supabase__*",
      "mcp__playwright__*"
    ]
  },
  "mcpServers": {
    "supabase": {
      "command": "npx",
      "args": ["-y", "@anthropic-ai/mcp-supabase"],
      "env": {
        "SUPABASE_ACCESS_TOKEN": "PENDIENTE_OBTENER_DE_SUPABASE_DASHBOARD"
      }
    },
    "playwright": {
      "command": "npx",
      "args": ["-y", "@anthropic-ai/mcp-playwright"]
    }
  }
}
